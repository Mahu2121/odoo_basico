<odoo>
    <data>

        <record model="ir.module.category" id="Grupos_para_odoo_prueba"> <!-- id externo para identificar o rexistro -->
            <field name="name">Xestion prueba
            </field><!-- Se visualiza na pantalla de usuario para escoller o grupo e é o nome para a categoría-->
            <field name="description">Xestión de odoo prueba</field>
            <field name="sequence">2</field>
        </record>

        <record model="res.groups" id="grupo_lectura_prueba"> <!-- id externo para identificar o rexistro -->
            <field name="name">Grupo Lectura Prueba</field> <!-- Nome para o  grupo de usuarios que se garda en res_groups-->
            <field name="category_id" ref="Grupos_para_odoo_prueba"/><!-- Se relaciona a través do id_externo coa categoría creada previamente-->
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/> <!-- many2many https://useopenerp.com/v8/model/res-users -->
            <field name="users" eval="[(4, ref('base.user_root'))]"/> <!-- https://odoo-development.readthedocs.io/en/latest/dev/py/x2many.html -->
        </record>

        <record model="res.groups" id="grupo_escritura_prueba"> <!-- id externo para identificar o rexistro -->
            <field name="name">Grupo Escritura Prueba</field> <!-- Nome para o  grupo de usuarios que se garda en res_groups-->
            <field name="category_id" ref="Grupos_para_odoo_prueba"/><!-- Se relaciona a través do id_externo coa categoría creada previamente-->
            <field name="implied_ids" eval="[(4, ref('odoo_basico.grupo_lectura_prueba'))]"/> <!-- many2many https://useopenerp.com/v8/model/res-users -->
        </record>

         <record model="res.users" id="usuario_lectura">
            <field name="name">Prueba Lectura Nombre</field>
            <field name="apelidos">Apelidos Lectura</field>
            <field name="visible">true</field>
            <field name="display_name">Nome Lectura Apelidos Lectura</field>
            <field name="email">Nome_Lectura@iesteis.com</field>
            <field name="active">true</field>
            <field name="company_id">1</field>
            <field name="lang">es_ES</field>
            <field name="tz">Europe/Madrid</field>
            <field name="login">lectura_prueba@odoo.com</field>
            <field name="password">odoo</field>
            <field name="groups_id" eval="[(6, 0, [ref('odoo_basico.grupo_lectura_prueba')])]"/>
        </record>

        <record model="res.users" id="usuario_escritura">
            <field name="name">Prueba Escritura Nombre</field>
            <field name="apelidos">Apelidos Escritura</field>
            <field name="visible">true</field>
            <field name="display_name">Nome Escritura Apelidos Escritura</field>
            <field name="email">Nome_escritura@iesteis.com</field>
            <field name="active">true</field>
            <field name="company_id">1</field>
            <field name="lang">es_ES</field>
            <field name="tz">Europe/Madrid</field>
            <field name="login">escritura_prueba@odoo.com</field>
            <field name="password">odoo</field>
            <field name="groups_id" eval="[(6, 0, [ref('odoo_basico.grupo_escritura_prueba')])]"/>
        </record>


    </data>
</odoo>
